<%- include('header')%>


   
  <!--------------->
<!--MAIN PIC-->
  <div id="mainImg" class="carousel carousel-slide">
    <img class="d-block w-100" src="/pics/Category-Carousel 3.jpeg">
  </div>
  <form action="/other" method="post">
    <div class="sorting-container">
      <label for="sorting">Sort By:</label>
      <select id="sorting" name="sorting">
        <option value="name">Name</option>
        <option value="price">Price</option>
      </select>
    </div>
    <button type="submit" class="btn btn-primary">Click to sort</button> <!-- Add class and type attribute -->
  </form>
<!------Prod Cards------->
<form action="/other/Addto" method="post">
<div id="men-prod" class="album py-5 bg-body-tertiary align-items-center" >
  <div class="container position-relative">
    <!--First Row-->
    <div class="row justify-content-center"> <!-- Add justify-content-center class here -->
      <% products.forEach(product => { %>
        <div class="col-md-4"> <!-- Add column classes to control card width -->
          <div class="thumbnail text-center">
            <% if(product.picture) { %>
              <img class="img-fluid" src="<%= product.picture %>" alt="">
            <% } else { %>
              <p>No image available</p>
            <% } %>
            <div class="caption">
              <p class="card-text font-monospace"><%= product.name %></p>
              <p class="card-text font-monospace"><strong><%= product.price %></strong></p>
            </div>
            <div class="btn-group">
              <button name="action" type="submit" class="btn btn-sm btn-dark rounded-pill" value="cart:<%= product.name %>">Add To Cart</button>
              <button name="action" type="submit" class="btn btn-sm btn-dark rounded-pill" value="wishlist:<%= product.name %>">Add To Wish list</button>

            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</div>
</form>

  </div>
  
  <%- include('footer')%>