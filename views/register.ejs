<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous"> 
<link rel="stylesheet" href="log.css">
<title>Sign Up</title>
</head>
<body style="background-image:url('/pics/golshim.jpeg');" >
  <div class="wrapper fadeInDown">
    <div id="formContent">
      
           <div class="fadeIn first mt-4">
           
              <div class="modal-content rounded-4 shadow">
                <div class="modal-header p-5 pb-4 border-bottom-0">
                  <h1 class="fw-bold mb-0 fs-2">Sign Up</h1>
                  <a type="button" class="btn-close" href="/"></a>
                </div>
      <!-- Register Form -->
      <form action="/register" method="POST" id="register-form" onsubmit="return validateRegisterForm();">
        <input type="text" id="name" class="fadeIn second" name="name" placeholder="User Name" >
        <input type="password" id="password" class="fadeIn third" name="password" placeholder="Password" >
        <input type="text" id="email" class="fadeIn third" name="email" placeholder="Email" >
        <input type="submit" class="fadeIn fourth" value="Sign Up">
        <div id="registerErrorMessage" style="color: red;"></div> <!-- Error message will appear here -->
        <p><small class="text-body-secondary">By clicking Sign Up, you agree to the terms of use.</small></p>
        <hr class="my-4">
      </form>
      
       
       
      <!-- Register -->
      <div id="formFooter">
        Already have an account? <a class="underlineHover" href="/login">Log In</a>
      </div>
    </div>
  </div>


  <script>
    function validateRegisterForm() {
      var name = document.getElementById("name").value;
      var password = document.getElementById("password").value;
      var email = document.getElementById("email").value;
      var errorMessage = document.getElementById("registerErrorMessage");
  
      if (!name) {
        errorMessage.textContent = "You need to enter username";
        return false; // Prevent form submission
      }
  
      if (!password) {
        errorMessage.textContent = "You need to enter password";
        return false; // Prevent form submission
      }
  
      if (!email) {
        errorMessage.textContent = "You need to enter email";
        return false; // Prevent form submission
      }
  
      return true; // Allow form submission
    }
  </script>
  
</body>
</html>


