<%- include('header')%>

<link rel="stylesheet" href="check.css">

<div class="container mt-5 px-5">
  <div class="mb-4">
    <h2>Confirm order and pay</h2>
    <span>please make the payment, after that you can enjoy all the features and benefits.</span>
  </div>

  <div class="row">
    <div class="col-md-8">
      <div class="card p-3">
        <form action="/check" method="post">
          <h6 class="text-uppercase">Payment details</h6>
          <div class="inputbox mt-3"> 
              <input type="text" name="name" pattern="[a-zA-Z\s]+" title="Only alphabets and spaces allowed." class="form-control" required="required"> 
              <span>Name on card</span> 
          </div>

          <div class="row">
            <div class="col-md-6">
                <div class="inputbox mt-3 mr-2"> 
                    <input type="text" name="card_number" pattern="[0-9]{15,19}" title="Card number should be 15 to 19 digits." class="form-control" required="required"> 
                    <i class="fa fa-credit-card"></i> 
                    <span>Card Number</span> 
                </div>
            </div>

            <div class="col-md-6">
                <div class="d-flex flex-row">
                    <div class="inputbox mt-3 mr-2"> 
                        <input type="text" name="expiry_date" pattern="(0[1-9]|1[0-2])\/([0-9]{2})" title="Expiry should be MM/YY" class="form-control" required="required"> 
                        <span>Expiry</span> 
                    </div>

                    <div class="inputbox mt-3 mr-2"> 
                        <input type="text" name="cvv" pattern="[0-9]{3,4}" title="CVV should be 3 or 4 digits." class="form-control" required="required"> 
                        <span>CVV</span> 
                    </div>
                </div>
            </div>
          </div>

          <div class="mt-4 mb-4">
            <h6 class="text-uppercase">Billing Address</h6>
            <div class="row mt-3">
                <div class="col-md-6">
                    <div class="inputbox mt-3 mr-2"> 
                        <input type="text" name="street_address" class="form-control" required="required"> 
                        <span>Street Address</span> 
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="inputbox mt-3 mr-2"> 
                        <input type="text" name="city" class="form-control" required="required"> 
                        <span>City</span> 
                    </div>
                </div>
            </div>

            <div class="row mt-2">
                <div class="col-md-6">
                    <div class="inputbox mt-3 mr-2"> 
                        <input type="text" name="state_province" class="form-control" required="required"> 
                        <span>State/Province</span> 
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="inputbox mt-3 mr-2"> 
                        <input type="text" name="zip_code" class="form-control" required="required"> 
                        <span>Zip code</span> 
                    </div>
                </div>
            </div>
          </div>
      </div>

      <div class="mt-4 mb-4 d-flex justify-content-between">
          <button type="submit" class="btn btn-success px-3">Order</button>
      </div>
        </form>
    </div>

    <div class="col-md-4">
      <div class="card card-blue p-3 text-white mb-3">
         <span><h3>Total</h3></span>
          <div class="d-flex flex-row align-items-end mb-3">
              <h1 class="mb-0 yellow"><%=totalPrice%>$</h1> 
          </div>
      </div>
    </div>
  </div>
</div>

<%- include('footer')%>
