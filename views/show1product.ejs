<%- include('header')%>

<!--MAIN PIC-->
<div id="mainImg" class="carousel carousel-slide">
    <img class="d-block w-100" src="/pics/pexels-kampus-production-6299936.jpg">
</div>

<!-- המוצר -->
<div class="show1container" style="background-image: url('/pics/Sand-Background 2.avif'); background-size: cover; background-position: center; display: flex; justify-content: center; align-items: center;">
    <form action="/show1product/Addto" method="post">
        <% products.forEach(function(product) { %>
            <h2 class="product-name" id="head"><%= product.name %></h2>
            <div class="row" id="product">
                <div class="col-sm-8">
                    <div class="desc">
                        <div class="details">
                            <p>Price: $<%= product.price %></p>
                            <p>Quantity: <%= product.quantity %></p>
                            <p>Category: <%= product.category %></p>
                        </div>
                    </div>
                </div>
                <div class="col-sm-8">
                    <div class="cont">
                        <!-- <% if (product.picture) { %>
                        <img width="300px" height="300px" class="product-image" src="<%=product.picture%>" alt="<%= product.name %> Image" />
                        <% }
                         else { %>
                        <p>No image available</p>
                        <% } %> -->
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-8" id="product">
                    <div class="btn-group">
                        <button name="action" type="submit" class="btn btn-sm btn-dark rounded-pill" value="cart:<%= product.name %>">Add To Cart</button>
                        <button name="action" type="submit" class="btn btn-sm btn-dark rounded-pill" value="wishlist:<%= product.name %>">Add To Wish list</button>
                    </div>
                </div>
            </div>
        <% }); %>
    </form>
</div>

<%- include('footer')%>
